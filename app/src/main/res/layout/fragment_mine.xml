<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="com.kaihuang.bintutu.mine.MineFragment"
    android:background="@color/gray_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigation_bar_bg"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/navigation_bar_edit_margin"
                android:src="@drawable/custom" />


            <TextView
                android:id="@+id/text_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:padding="@dimen/navigation_bar_edit_margin"
                android:text="报修"
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_30" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigation_bar_bg"
            android:paddingBottom="@dimen/ui_40"
            android:paddingLeft="@dimen/navigation_bar_edit_margin"
            android:paddingRight="@dimen/navigation_bar_edit_margin"
            android:paddingTop="@dimen/ui_40">

            <TextView
                android:id="@+id/text_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_60" />

            <TextView
                android:id="@+id/text_authentication"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/margin_50"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/ui_margin_20"
                android:drawableRight="@drawable/right_into"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/font_orange"
                android:textSize="@dimen/font_30"
                android:visibility="gone"/>

        </RelativeLayout>

        <RelativeLayout
            style="@style/relativelayout">
            <TextView
                style="@style/textview"
                android:text="最近登录时间" />

            <TextView
                android:id="@+id/text_date"
                android:layout_alignParentRight="true"
                style="@style/textview1" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/relativelayout">

            <TextView
                style="@style/textview"
                android:text="所属区域" />

            <TextView
                android:id="@+id/text_city"
                style="@style/textview1"
                android:layout_alignParentRight="true"
                android:text="" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/relativelayout">

            <TextView
                style="@style/textview"
                android:text="所属代理" />

            <TextView
                android:id="@+id/text_type"
                style="@style/textview1"
                android:layout_alignParentRight="true"
                android:text="" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/navigation_bar_edit_margin"
            android:background="@color/navigation_bar_bg"
            android:padding="@dimen/navigation_bar_edit_margin"
            android:text="我的业绩"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/navigation_bar_bg"
            android:paddingBottom="@dimen/navigation_bar_edit_margin"
            android:paddingLeft="3dp"
            android:paddingRight="@dimen/navigation_bar_edit_margin">

            <TextView
                android:id="@+id/text_today"
                style="@style/textview2"
                android:text="今日业绩" />

            <TextView
                android:id="@+id/text_month"
                style="@style/textview2"
                android:text="本月业绩" />

            <TextView
                android:id="@+id/text_all"
                style="@style/textview2"
                android:text="全部业绩" />


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rel_myteam"
            style="@style/mine_main"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的团队"
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_30" />

            <TextView
                android:id="@+id/text_lookat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/ui_margin_20"
                android:drawableRight="@drawable/right_into"
                android:gravity="center_vertical"
                android:text="查看"
                android:textColor="@color/gray3"
                android:textSize="@dimen/font_30" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_loginout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_88"
            android:layout_marginRight="@dimen/ui_60"
            android:layout_marginLeft="@dimen/ui_60"
            android:layout_marginTop="@dimen/ui_60"
            android:background="@color/lin_bg"
            android:text="退出"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_30" />

    </LinearLayout>
</ScrollView>
