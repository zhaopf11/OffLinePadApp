<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/ui_30"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/text_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:gravity="center"
        android:layout_marginLeft="@dimen/ui_margin_20"
        android:textColor="@color/navigation_bar_bg"
        android:textSize="@dimen/font_18"
        android:background="@drawable/red_spot"/>

    <TextView
        android:id="@+id/text_foottype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_5"
        android:text="[左脚]:"
        android:textColor="@color/gray3"
        android:textSize="@dimen/font_26"/>

    <TextView
        android:id="@+id/text_desc_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_5"
        android:layout_marginRight="@dimen/ui_30"
        android:text="哈哈哈哈或或即可将加快"
        android:textSize="@dimen/font_26"
        android:textColor="@color/gray3" />
</LinearLayout>
