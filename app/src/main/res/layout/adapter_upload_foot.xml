<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/data_relative"
    android:layout_height="@dimen/ui_70"
    >
    <RelativeLayout
        android:id="@+id/rel_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_70"
        android:background="@color/navigation_bar_bg">

        <TextView
            android:id="@+id/text_num"
            android:layout_width="@dimen/ui_30"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ui_30"
            android:gravity="center_vertical"
            android:text="1"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_24" />

        <TextView
            android:id="@+id/text_footproperty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ui_margin_20"
            android:layout_toLeftOf="@+id/text_leftfoot"
            android:layout_toRightOf="@+id/text_num"
            android:gravity="center_vertical"
            android:text="脚长"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_24" />

        <EditText
            android:id="@+id/edit_leftfoot"
            android:layout_width="@dimen/ui_120"
            android:layout_height="@dimen/ui_60"
            android:layout_toLeftOf="@+id/edit_rightfoot"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="0.00"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_24"
            android:inputType="number|numberDecimal"
            android:background="@drawable/input_background"/>

        <EditText
            android:id="@+id/edit_rightfoot"
            android:layout_width="@dimen/ui_120"
            android:layout_height="@dimen/ui_60"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/ui_50"
            android:layout_marginRight="@dimen/ui_30"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="0.00"
            android:inputType="number|numberDecimal"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_24"
            android:background="@drawable/input_background"/>
    </RelativeLayout>
</RelativeLayout>
