<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/navigation_bar_bg">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_560"
            android:src="@drawable/foot1" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_500">

        <TextView
            android:id="@+id/text_foot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左脚内侧"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_24"
            android:layout_marginLeft="@dimen/ui_margin_20"
            />

        <TextView
            android:id="@+id/text_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击图片可编辑"
            android:textColor="@color/gray"
            android:textSize="@dimen/font_24"
            android:layout_marginLeft="@dimen/ui_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ui_margin_20"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>