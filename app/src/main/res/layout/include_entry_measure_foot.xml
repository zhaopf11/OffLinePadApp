<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:layout_marginBottom="@dimen/ui_60"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_88"
        android:paddingLeft="@dimen/ui_30"
        android:background="@color/navigation_bar_bg">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="内外翻评估"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_30" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/navigation_bar_bg"
        android:layout_marginTop="1px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左脚"
            android:textSize="@dimen/font_24"
            android:textColor="@color/gray3"
            android:padding="@dimen/ui_30"/>

        <RadioGroup
            android:id="@+id/radiogroup_left_neiwaifan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ui_30"
            android:paddingRight="@dimen/ui_30"
            android:paddingBottom="@dimen/ui_30">

            <RadioButton
                android:id="@+id/radiobtn_left_serious_neifan"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="严重内翻"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_left_mild_neifan"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="轻度内翻"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_left_normal"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="正常"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_left_mild_waifan"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="轻度外翻"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_left_serious_waifan"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="严重外翻"
                android:textSize="@dimen/font_24" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/navigation_bar_bg"
        android:layout_marginTop="1px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右脚"
            android:textSize="@dimen/font_24"
            android:textColor="@color/gray3"
            android:padding="@dimen/ui_30"/>

        <RadioGroup
            android:id="@+id/radiogroup_right_neiwaifan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ui_30"
            android:paddingRight="@dimen/ui_30"
            android:paddingBottom="@dimen/ui_30">

            <RadioButton
                android:id="@+id/radiobtn_right_serious_neifan"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="严重内翻"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_right_mild_neifan"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="轻度内翻"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_right_normal"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="正常"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_right_mild_waifan"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="轻度外翻"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_right_serious_waifan"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="严重外翻"
                android:textSize="@dimen/font_24" />
        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigation_bar_bg"
        android:layout_marginTop="1px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_360"
            android:src="@drawable/foot_inout"
            android:layout_marginTop="@dimen/ui_50"
            android:layout_marginBottom="@dimen/ui_50"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_88"
        android:paddingLeft="@dimen/ui_30"
        android:background="@color/navigation_bar_bg"
        android:layout_marginTop="@dimen/ui_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="足弓评估"
            android:textColor="@color/gray3"
            android:textSize="@dimen/font_30" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/navigation_bar_bg"
        android:layout_marginTop="1px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左脚"
            android:textSize="@dimen/font_24"
            android:textColor="@color/gray3"
            android:padding="@dimen/ui_30"/>

        <RadioGroup
            android:id="@+id/radiogroup_left_zugong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ui_30"
            android:paddingRight="@dimen/ui_30"
            android:paddingBottom="@dimen/ui_30">

            <RadioButton
                android:id="@+id/radiobtn_left_serious_bianping"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="严重扁平"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_left_commonly_pingzu"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="一般平足"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_left_normal_zu"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="正常足"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_left_height_zu"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="高弓足"
                android:textSize="@dimen/font_24" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/navigation_bar_bg"
        android:layout_marginTop="1px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右脚"
            android:textSize="@dimen/font_24"
            android:textColor="@color/gray3"
            android:padding="@dimen/ui_30"/>

        <RadioGroup
            android:id="@+id/radiogroup_right_zugong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/ui_30"
            android:paddingRight="@dimen/ui_30"
            android:paddingBottom="@dimen/ui_30">

            <RadioButton
                android:id="@+id/radiobtn_right_serious_bianping"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="严重扁平"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_right_commonly_pingzu"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="一般平足"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_right_normal_zu"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="正常足"
                android:textSize="@dimen/font_24" />

            <RadioButton
                android:id="@+id/radiobtn_right_height_zu"
                android:layout_width="0dp"
                android:layout_weight="1"
                style="@style/modify_personal_radiobutton"
                android:text="高弓足"
                android:textSize="@dimen/font_24" />
        </RadioGroup>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navigation_bar_bg"
        android:layout_marginTop="1px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_360"
            android:src="@drawable/foot_instep"
            android:layout_marginTop="@dimen/ui_50"
            android:layout_marginBottom="@dimen/ui_50"/>
    </RelativeLayout>
</LinearLayout>